//METHOD 1 - WHEN THE LOOP GOES UP TO N-1 TIMES

public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		System.out.print("Enter the number to be checked for prime = ");
		int num = scanner.nextInt();
		
		boolean checker = false;
		
		if (num==2) {
			System.out.println("Prime");
		}
		
		if(num>2) {
			for(int i=2; i<num; i++) {
				if(num%2 !=0) {
					checker =  true;
				}
				
				else {
					System.out.println("Not Prime");
					break;
				}
			}
			if (checker)
				System.out.println("Prime");
		}
		scanner.close();

}


//METHOD 2 - WHEN THE LOOP GOES UP TO N/2 TIMES

public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		System.out.print("Enter the number to be checked for prime = ");
		int num = scanner.nextInt();
		
		boolean checker = false;
		
		if (num==2) {
			System.out.println("Prime");
		}
		
		if(num>2) {
			for(int i=2; i<=num/2; i++) {
				if(num%2 !=0) {
					checker =  true;
				}
				
				else {
					System.out.println("Not Prime");
					break;
				}
			}
			if (checker)
				System.out.println("Prime");
		}
		scanner.close();

}

//METHOD 3 - WHEN THE LOOP GOES UP TO SQUARE ROOT OF THE NUMBER

public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		System.out.print("Enter the number to be checked for prime = ");
		int num = scanner.nextInt();
		
		boolean checker = false;
		
		if (num==2) {
			System.out.println("Prime");
		}
		
		if(num>2) {
			for(int i=2; i<= Math.sqrt(num); i++) {
				if(num%2 !=0) {
					checker =  true;
				}
				
				else {
					System.out.println("Not Prime");
					break;
				}
			}
			if (checker)
				System.out.println("Prime");
		}
		scanner.close();

}
